{
	"exclude": ["node_modules"],
	"include": ["src"],
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"rootDir": "./src",
		"moduleResolution": "Node",
		"typeRoots": ["./node_modules/@types"],
		"sourceMap": true,
		"outDir": "dist/",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
	}
}
